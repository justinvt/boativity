%head
  %title Boativity
  %style{:type => "text/css"}
    :sass
      body
        font-family: "Helvetica", Arial
        line-height: 1.8em
        letter-spacing: -0.015em
        background: #f4f4f4
      ul
        -moz-padding-start: 0
        margin: 0
        padding: 0
      li
        display: inline
        list-style-type: none
        margin: 0 10px 0 0
        padding: 0
      .container
        margin: auto
        width: 800px
      .header, .footer
        margin: 20px 0 0 0
        border-radius: 10px
        background: #fff
        padding: 10px
      .info
        margin: 20px 0 0 0
        background: #3cf
        height: 400px
        background: #036
      .selections
        background: #eee
        height: 60px
        border: solid 1px #ccc
        li
          color: #666
          padding: 10px
          background: #ddd
          border: solid 1px #ccc
     

%body
  .container
    .header
      %ul.menu
        %li About
        %li FAQ
        %li Contact
    .info
    .selections
      %ul.menu
        %li About
        %li FAQ
        %li Contact
    .footer
